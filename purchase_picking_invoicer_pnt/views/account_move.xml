<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="pnt_picking_supplier_id"
                       groups="purchase.group_purchase_user"
                       class="oe_edit_only" attrs="{'invisible': ['|', ('state','!=','draft'), ('move_type', 'not in', ['in_refund','in_invoice'])]}"
                       options="{'no_create': True, 'always_reload': True}"
                       domain="[('pnt_supplier_id', '=', partner_id), ('pnt_all_invoiced','=', False)]"
                />
                <field name="pnt_loaded_supplier_ids" widget="many2many_tags" options='{"no_create": True}' attrs="{'invisible': ['|', ('state','!=','draft'), ('move_type', 'not in', ['in_refund','in_invoice'])]}"/>
                <field name="pnt_history_supplier_ids" widget="many2many_tags" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree" position="inside">
                <field name="pnt_picking_supplier_id" optional="show" attrs="{'column_invisible': [('parent.move_type', 'not in', ['in_refund','in_invoice'])]}"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']//tree" position="inside">
                <field name="pnt_picking_supplier_id" attrs="{'column_invisible': [('parent.move_type', 'not in', ['in_refund','in_invoice'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>
